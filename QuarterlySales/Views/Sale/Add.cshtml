@model Sale
@{
	ViewBag.Title = "Add Sale";
}
<div class="container">
	<div class="ms-3 mt-2">
		<h1>Add Employee</h1>
	</div>
	<form asp-action="Edit" method="post">
		<div class="m-3">
			<label asp-for="Quarter">Quarter</label>
			<input asp-for="Quarter" class="form-control" />
			<span asp-validation-for="Quarter" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="Year">Year</label>
			<input asp-for="Year" class="form-control" />
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="Amount">Amount</label>
			<input asp-for="Amount" class="form-control" />
			<span asp-validation-for="Amount" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="EmployeeId" class="form-label">Employee</label>
			<select asp-for="EmployeeId" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "Name"))" class="form-select">
				<option value="" selected>-- Select Employee --</option>
			</select>
			<input type="hidden" asp-for="EmployeeId" />
			<span asp-validation-for="EmployeeId" class="text-danger"></span>
		</div>
		<div class="m-3">
			<button type="submit" class="btn btn-success">Add</button>
			<a asp-controller="Home" asp-action="Cancel" class="btn btn-warning text-white">Cancel</a>
		</div>
	</form>
</div>

