@model EmployeeViewModel
@{
    ViewData["Title"] = "Quarterly Sales";
}

<h1>Quarterly Sales</h1>
<form asp-action="Index" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <p>Employee</p>
        </div>
        <div class="col-2">
            @if (Model.Employees != null && Model.Employees.Any())
            {
                <select asp-for="@Model.Employee.EmployeeId"asp-items="@(new SelectList(Model.Employees, "EmployeeId", "Name"))" class="form-select">
                    <option value="0">Select an employee...</option>
                </select>
            }
            else
            {
                <p>No employees available</p>
            }
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Year</th>
            <th>Quarter</th>
            <th>Employee</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sales)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.Quarter</td>
                <td>@item.Employee.Name</td>
                <td>@item.Amount</td>
                <td>
                    <input type="hidden" asp-for="@item.SaleId" />
                </td>
            </tr>
        }
    </tbody>
</table>
